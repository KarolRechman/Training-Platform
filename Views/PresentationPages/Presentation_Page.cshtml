@model IEnumerable<Quiz.Models.Files>

@{
    ViewData["Title"] = "Presentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int list_Number = 1;
}

<div class="p-2">
    <h1 style="text-align:center;">@ViewBag.Presentation_Name</h1>
    <a asp-controller="UserPages" asp-action="Users_Training_List"><button type="button" class="btn btn-outline-info waves-effect btn-lg">Back to List</button></a>
</div>
<button class="btn btn-primary btn-block" id="IndexButton" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Index of pages
</button>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:50%;" data-interval="false">
    <div class="collapse" id="collapseExample">
        <div class="card card-body">

            <div class="btn-group btn-group-sm carousel-indicators" role="group" aria-label="Basic example">
                @foreach (var item in Model)
                {
                    @if (item.number == 0)
                    {
                        <span class="dot btn btn-info btn-sm" id="span_indicator" data-target="#carouselExampleIndicators" data-slide-to="@Html.DisplayFor(modelItem => item.number)">
                            @list_Number
                        </span>
                    }
                    else
                    {
                        <span class="dot btn btn-info btn-sm" id="span_indicator" data-target="#carouselExampleIndicators" data-slide-to="@Html.DisplayFor(modelItem => item.number)">
                            @list_Number
                        </span>
                    }
                    list_Number += 1;
                }

            </div>
        </div>
    </div>
    <div class="carousel-inner">
        @foreach (var item2 in Model)
        {
            @if (item2.number == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" id="slider" src='@Html.DisplayFor(modelItem => item2.src)' alt="First slide">
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" id="slider" src='@Html.DisplayFor(modelItem => item2.src)' title='@Html.DisplayFor(modelItem => item2.Name)' alt="Presentation Picture" />
                </div>
            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-9 mr-auto">
        <h1 style="text-align:right;">When you're done watching, don't wait and</h1>
    </div>
    <div class="col-auto ml-auto p-2">
        <a asp-action="Test_Page" asp-route-id="@ViewBag.Id"><button type="button" class="btn btn-outline-primary waves-effect btn-lg">Go to Quiz</button></a>
    </div>
</div>




