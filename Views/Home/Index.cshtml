@model Quiz.Models.Login
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Home Page Log in";
    Layout = "_Layout_Material";
    string login = ViewBag.Type;
    string display_Class1 = "";

}
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-notify modal-danger modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title w-100" id="myModalLabel">Change your browser !!!</h1>
            </div>
            <div class="modal-body">
                <h2 id="BrowserError">@ViewBag.Type</h2>
                <h3>@ViewBag.Type2</h3>
                <h4>@ViewBag.Type3</h4>
            </div>
            <div class="modal-footer flex-center">
                <button type="button" class="btn btn-outline-info font-weight-bold" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@if (@ViewBag.Type == null || login.Contains("Login failed") == true)
{
    display_Class1 = "";
}
else
{
    display_Class1 = "display: none;";

}
@if (Context.Session.GetString("User_Admin") != null)
{
    display_Class1 = "display: none;";
}

