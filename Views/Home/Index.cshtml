<!--Grid column-->
<div class="mx-5 wow fadeIn zoomIn animated" data-wow-delay="0.1s">
    <h1 class="h1-responsive text-center font-weight-bold mt-sm-5" style="color:black;">Welcome to your training field</h1>
    <hr class="hr-light">
    <h3 class="mb-4 text-center" style="color:black; text-align:center;">
        Get ready for BootCamp experience, Enter your training chamber !!
    </h3>

    <div class="card" id="Login" style="@display_Class1">

        <!-- Form -->
        <form method="post">

            <!-- Heading -->
            <div class="LoginHeader">
                <h3 class="card-header blue-gradient white-text text-center py-4">
                    <strong>Log in</strong>
                </h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="md-form">
                    <i class="fas fa-user prefix"></i>
                    <input asp-for="login" type="text" id="form3" class="form-control" required autocomplete="on">
                    <label asp-for="login" for="form3">Login</label>
                    <span asp-validation-for="login" class="text-danger"></span>
                </div>
                <div class="md-form">
                    <i class="fas fa-key prefix"></i>
                    <input asp-for="Password" type="password" id="form2" class="form-control" required>
                    <label asp-for="Password" for="form2">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center white-text">
                    <button type="submit" class="btn blue-gradient font-weight-bold">Log in</button>
                </div>
            </div>
        </form>
        <!-- Form -->



    </div>
</div>

